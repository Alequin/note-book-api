{
  "name": "note-book-server",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "db-migrate": "^0.11.11",
    "db-migrate-pg": "^1.2.2",
    "express": "^4.17.1",
    "pg": "^8.3.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "setup": "npm run build-database-config",
    "local-database-up": "docker-compose  --file ./docker-compose/local-database-docker-compose.yml --project-name local-note-book-database up --detach ",
    "local-database-down": "docker container stop $(docker container ls -q --filter name=local-note-book-database*)",
    "test-database-up": "docker-compose  --file ./docker-compose/test-database-docker-compose.yml --project-name test-note-book-database up --detach ",
    "test-database-down": "docker container stop $(docker container ls -q --filter name=test-note-book-database*)",
    "create-migration": "db-migrate --config  ./server/config/database-credentials.json --migrations-dir ./server/database/migrations create",
    "db-dev-up": "db-migrate up --config  ./server/config/database-credentials.json --migrations-dir ./server/database/migrations --env development",
    "db-dev-down": "db-migrate down --config  ./server/config/database-credentials.json --migrations-dir ./server/database/migrations --env development",
    "db-test-up": "db-migrate up --config  ./server/config/database-credentials.json --migrations-dir ./server/database/migrations --env test",
    "db-test-down": "db-migrate down --config  ./server/config/database-credentials.json --migrations-dir ./server/database/migrations --env test",
    "db-prod-up": "db-migrate up --config  ./server/config/database-credentials.json --migrations-dir ./server/database/migrations --env production",
    "db-prod-down": "db-migrate down --config  ./server/config/database-credentials.json --migrations-dir ./server/database/migrations --env production",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "npm run test-client-without-watching && npm run test-server",
    "test-client-without-watching": "npm run test-client --watchAll=false",
    "test-client": "react-scripts test",
    "test-server": "jest --watch ./server/*",
    "eject": "react-scripts eject",
    "server": "babel-node ./server/start",
    "local-database": "docker run --name postgres -e POSTGRES_PASSWORD=mysecretpassword -d postgres",
    "build-database-config": "babel-node ./server/config/build-database-credentials.script.js",
    "build-local": "heroku local",
    "live-log": "heroku logs -a note-book-server-00",
    "live-config": "heroku config -a note-book-server-00"
  },
  "proxy": "http://127.0.0.1:3010",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alequin/note-book-server.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Alequin/note-book-server/issues"
  }
}
